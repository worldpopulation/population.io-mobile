.summary-area
  height 800px
  younger-older-chart
    display block
  h3
    margin 0 0 40px 0
    padding 30px 0
    border-top 1px solid rgba(0, 0, 0, 0.2)
    border-bottom @border-top
    color #777
    font-size 32px
    line-height 1.3
    font-family 'PlantinMTStd-Light', sans-serif
    span
      color #222
  .region-switcher
    border 1px solid rgba(0, 0, 0, 0.2)
    clearfix()
    width 240px
    margin 0 auto
    border-radius 4px
    a
      box-sizing border-box
      width 120px
      display block
      float left
      text-align center
      line-height 40px
      &:nth-child(2)
        border-left 1px solid rgba(0, 0, 0, 0.2)
      &.active
        background #bde88a
  .younger-you-older-section
    margin-top 40px
    clearfix()
    .you-column
      float left
      width 20%
      text-align center
      color #999
      font-weight 100
      line-height 1.3
      .icon
        text-align center
        svg
          display inline
      span
        color #222
        font-weight 500
    .younger-column
    .older-column
      width 40%
      float left
      text-align center
      .number
        margin-top 37px
        font-family 'PlantinMTStd-Light', sans-serif
        font-size 48px
      .label
        color #999
        font-weight 100