.milestones-area
  height 1020px
  .global-rank
    padding 10px 0 0 0
  .timeline
    width 70%
    position relative
    float left
    height 780px
    ul
      width 320px
    li:hover
      background #f3f3f3
    li
      border-top: 3px solid white;
      padding: 17px 20px 17px 90px;
      font-size 18px
      position relative
      cursor pointer
      &.color-1:after
        background highlight-color1
      &.color-2:after
        background highlight-color2
      &.selected
        background #f3f3f3
        cursor pointer
      &.selected:before
        background #000 !important
      &:before
        position absolute
        content ''
        background border-color
        left 0
        top 0
        height 100%
        width 4px
      &.past:before
        background highlight-yellow
      &.now:before
        background highlight-yellow
    .time
      position absolute
      top 50%
      left 24px
      margin-top -18px
      height 36px
      color: #666666
      font-size 18px
    .date
      display block
      font-size 12px
      width 60
  milestones:after
    content ''
    position absolute
    left -20px
    top 0
    bottom 0
    border-right 1px solid border-color
    display block
  milestones
    position absolute
    top 122px
    left 380px
  .rank
    width 30%
    float left
    .title
      margin 10px 0 0 0
      font-size 18px
      color #666666
    .value
      color #333333
      font-size 36px
      margin 0 0 40px 0
    rank-graph
      position relative
      left -8px