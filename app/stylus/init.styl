html,
body

input::-ms-clear
    display none

body.is-first-slide
  ul[rn-carousel]
    padding-top: 0;
    > li
      max-height calc(100vh)
  #home
    i.menu-bar-icon
      top 0px
      right 0px
    footer
      width 100%
      position inherit
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      bottom: 0;
      padding: 10px 0px;

body
  width auto
  font-family $font1
  overflow-y hidden
  .inner
    width 100%
    clearfix()
  ul[rn-carousel]
    overflow inherit
    overflow-x hidden
    overflow-y hidden
    width: 100%;
    height: 100vh;
    padding-top: 110px;
    box-sizing: border-box;

.slide-head
  position: fixed;
  z-index: 99999;
  width: 100%;
  top: 0;

ul
  li
    list-style-type none
    margin 0
    padding 0


svg
    display block
    margin 0
    padding 0
    cursor default

h1, h2, h3, h4, h5, h6, p
    margin 0
    padding 0
    white-space normal

i
    font-style normal

.modal-dialog i
    font-style italic

h1
    color $color1
    font-size 36px
    line-height 1.2em
    font-family 'PlantinMTStd-Light', sans-serif
    font-weight normal
    span
        color h1-span-color

strong,
b
    font-family 'Theinhardt-Medium', 'Helvetica', sans-serif
    font-weight normal

h2
    font-size 18px
    font-weight normal
    color #666666
    position relative
    margin 50px 0 20px 0

a
    text-decoration none
    color #222

*
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)

input
    -webkit-appearance none

.hidden
    visibility hidden
    overflow hidden
    height 0

.container
    width 100%
    margin 0 auto
    padding 0

svg.defs-area
    display none

text
    cursor default

// browser warning
.browser-list
    clearfix()
    padding 20px 0 20px 0
    a
        float left
        width 33.33%
        text-align center
        text-decoration none !important
    a:hover
        text-decoration underline !important
    span
        display block
    span.title
        margin 20px 0 2px 0
        font-family 'Theinhardt-Medium', 'Helvetica', sans-serif
        font-size 18px
    span.publisher
        font-size 12px
    .icon
        display inline-block
        height 130px
        width 125px
        background url(../images/browsers-sprite.png) no-repeat
    .icon.chrome
        background-position left top
    .icon.safari
        background-position -380px top
    .icon.firefox
        background-position -128px top
    .icon.opera
        background-position -250px top

// content block
.content-block
  float left
  padding 0px
  width calc(100% / 7);
  white-space nowrap
  min-height 100%
  clearfix()
  display inline-block
  position relative

.wrapperline
  width calc(100%)
  overflow hidden
  position relative


// cloak
[ng\:cloak],
[ng-cloak],
[data-ng-cloak],
[x-ng-cloak],
.ng-cloak,
.x-ng-cloak
    display none !important

// datepicker
.ui-datepicker
    border 1px solid border-color
    border-radius 0px
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
    background-color #ffffff
    padding 15px
    display none

.ui-datepicker-title
    clearfix()
    padding 0 0 5px 0

.ui-datepicker-month
    float right

.ui-datepicker-year
    float left

.ui-datepicker-prev,
.ui-datepicker-next
    display none

.ui-datepicker-calendar
    margin 5px 0 0 0
    border-spacing 0
    border-collapse collapse
    th,
    td
        font-size 12px
        padding 6px 4px
        width 25px
        text-align right
        border none
    th
        border-bottom 1px solid border-color
        font-family 'Theinhardt-Medium', 'Helvetica', sans-serif
    td.ui-datepicker-current-day,
    td:hover
        cursor pointer
        background highlight-yellow
    td.ui-datepicker-unselectable,
    td.ui-datepicker-unselectable:hover
        background none
        color #ccc
    a
        text-decoration none
        color #666

// wip
.wip
    display none
    background url(../images/wip.svg)
    position absolute
    left 0
    top 100px
    width 100px
    z-index 4
    height 100px

// moda
.modal
    background $color4
    position absolute
    left 0
    top 0
    height 110%
    width 100%

.modal-header
  .modal-title
    font-size 24px
    color $active-blue
    font-family $font3
    padding-bottom 15px
    border-bottom 1px solid $color2

  .modal-header-close
    height 10px
    width 10px
    padding 10px
    background-image url("../images/close-icon.svg")
    position absolute
    top 15px
    right 15px
    background-repeat no-repeat



.modal-body
    margin 20px 0 40px 0
    h4
        font-family $font3
        margin 0 0 10px 0
        font-size 17px
        color $color3
    p
        margin 0 0 20px 0
        line-height 20px
        font-family $font3
    a
        text-decoration underline
        display inline-block
    li
        list-style-type: disc
        padding-bottom: 13px
        margin-left: 22px
    ul
        padding-bottom: 7px

.modal-dialog
    background $color4
    padding 15px
    width calc(100vw - 30px)
    position absolute

// navigation
.navigation
    position fixed
    right 20px
    top 50%
    z-index 200
    li
        cursor pointer
        position relative
        width 20px
        height 20px
    span
        left 8px
        top 4px
        position absolute
        display block
        width 5px
        height 5px
        background #999999
        border-radius 5px
    li.active
        span
            border-radius 0px
            top 1px
            left 5px
            width 10px
            height 10px
            background #fff
            border 1px solid #999999

.tedtalk
    background #FF2B06
    color #fff
    padding 12px 0px
    margin 0 0 10px 0

.tedtalk a
    color #fff
    border-bottom 2px solid #fff
    font-weight bold

// share
.share
    padding-bottom 30px;
    display block
    background highlight-yellow
    position fixed
    bottom -55px
    font-size 14px
    right -150px
    z-index 30
    height 120px
    width 350px
    text-align center
    transform rotate(-45deg)
    transition all ease 250ms
    span
        font-size 13px
        font-family Helvetica, sans-serif
        font-weight bold
        // color rgba(0, 0, 0, 0.8)
    .links
        // opacity 0.5
        margin 5px 0 0 0
        font-size 24px
        a
            margin 0 2px

.share.expanded
    right -120px
    bottom -25px

.share:hover
    right -120px
    bottom -25px
    .links
        opacity 1.0

.share.animate.ng-hide-add,
.share.animate.ng-hide-remove
    display block !important

.share.animate.ng-hide-add.ng-hide-add-active,
.share.animate.ng-hide-remove
    transform translate3d(100px, 100px, 0) rotate(-45deg)

.share.animate.ng-hide-add,
.share.animate.ng-hide-remove.ng-hide-remove-active
    transform translate3d(0, 0, 0) rotate(-45deg)

// section
section
    header
        position relative
    header.divided
        clearfix()
        h1
            width 50%
            float left
        h1:last-child
            text-align right

// typeahead
.typeahead
    position relative
    input
        outline 0
        border 1px solid border-color
        background-color #ffffff
        padding 10px 12px
        border-radius 0px
        font-size 14px
        width 200px
    .dropdown-menu
        overflow hidden
        border 1px solid border-color
        cursor pointer
        z-index 9999
        position absolute
        border-radius 0px
        left 0px
        right 8px
        box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
        background-color #ffffff
        margin-right 10px
    li
        width 100%
        box-sizing border-box
        padding 10px 12px
        color p-color
        font-size 14px

    li.active,
    li:hover
        background-color #bdaee9
        padding 10px 12px
        width 100%
    &.rel li.active,
    &.rel li:hover
        background-color highlight-blue

// form input fields
.form-inline
    > *:last-child
        margin-right 0px

form
    input.form-control:focus
        border 1px solid border-color
        box-shadow 0 0 6px border-color
    input.form-control
        box-sizing border-box
        font-size 14px
        padding 12px
        background #fff
        margin-top 0px
        margin-bottom 0px
        border-radius 5px
        border 1px solid border-color
        outline none
    input.form-control.input-dark
        color #fff
        background #666666
        ::-webkit-input-placeholder
            font-size 14px
            color #fff

.btn
    height 46px
    width 46px
    border none
    background-icon()
    background-position -228px -730px
    cursor pointer
    outline none
    padding 0
    position relative
    span
        display none
    &.loading
        span
            font-size 30px
            color #fff
            display block
            left 50%
            top 50%
            background #000
            width 60px
            height @width
            margin-left - (@width / 2)
            margin-top -( @width / 2)
            border-radius @width
            text-align center
            line-height @height
            animation loading-animation 1.25s infinite linear
.btn.gobtn
    font-size 20px
    font-weight lighter
    color #fff
    display block
    float right
    background #1b0558
    width 60px
    height @width
    margin-right 10px
    margin-top -20px
    border-radius @width
    text-align center
    line-height 55px
    font-family 'PlantinMTStd-Light'
    font-style italic
    letter-spacing 1px
.btn.btn-big
    height 120px
    width 120px
    background-position -300px -200px
    margin-top -35px
    cursor pointer

*.inactive
    background: #8d82ab !important;
    cursor pointer

*[disabled=disabled]
    opacity 0.5
    cursor default
    pointer-events none

.toggle
    overflow hidden
    label
        border 1px solid highlight-yellow
        float left
        margin 0
        font-size 14px
        padding 0 20px
        line-height 48px
        height 48px
        background #fff
        cursor pointer
    label:first-child
        border-top-left-radius 0px
        border-bottom-left-radius 0px
    label:last-child
        border-top-right-radius 0px
        border-bottom-right-radius 0px
    label.active
        border 1px solid highlight-yellow
        background highlight-yellow
        color white

i.menu-bar-icon
  z-index 9999
  height 15px
  width 15px
  padding 15px
  margin-bottom -25px
  background-repeat no-repeat
  background-image url('../images/menu-bar.svg')
  position absolute
  top 15px
  right 15px


.slide
  -webkit-transitionall .1s linear
  -webkit-transform translate3d(0,0,0)
.slide-active
  -webkit-transform translate3d(-100%,0,0)

ul[rn-carousel]
  > li
    padding: 15px 15px
    width: calc(100vw - 30px)
    overflow-y auto
    max-height calc(100vh - 110px)
