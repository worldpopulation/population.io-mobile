header
  width 100%
  .container
    width 100%
    clearfix()
    padding 0px 0px 10px 0px
    border-bottom 1px solid $color2
    .title
      font-size 13px
      color $color1
      font-family $font1
      display block
      margin 0px 0px 5px 0px

    .subtitle
      font-size 10px
      color $color2
      display block

    .icon-alpha
      background-image url("../images/beta_opt.svg")
      background-repeat no-repeat
      background-color transparent
      -webkit-border-radius 0
      border-radius 0
      height 40px
      width 40px
      position relative
      float left
      display block
      margin-left: 135px
      margin-top: -35px
      vertical-align middle
      background-size 100%

a
    display block
    cursor pointer

  .remove
    display none

  .menu
    position absolute
    top 0
    right 0
    width 100%
    height 100%
    pointer-events none
    background $color4
    z-index 200
    .menu-wrapper
      padding 15px
      background $color4
      pointer-events auto
      .close-wrapper
        border-bottom 1px solid $color2
        clearfix()
        .close-button
          float right
          z-index inherit 201
          height 10px
          width 10px
          padding 10px
          margin-bottom 15px
          background-image url('../images/close-icon.svg')

      .language-section
        z-index inherit
        padding 20px 0 30px
        border-bottom 1px solid $color2
        h3
          font-size 15px
          font-family $font1
          color $color1
          margin-bottom 18px
        form.change-language
          width 100%
          clearfix()
          label
            float left
            border 1px solid highlight-yellow
            margin 0
            font-size 14px
            padding 0 20px
            line-height 48px
            height 48px
            cursor pointer
            width calc(50vw - 60px)
          :first-child
            border-top-left-radius 10px
            border-bottom-left-radius 10px
          :last-child
            border-top-right-radius 10px
            border-bottom-right-radius 10px
          .active
            background highlight-yellow

      .content-menu-section
        z-index inherit
        padding 15px 0px
        border-bottom 1px solid $color2
        h3
          color $color3
          font-family $font1
          font-size 15px
          margin-bottom 10px
        ul
          li
            a
              font-size 22px
              padding 10px 0px

      .normal-menu-section
        z-index inherit
        padding 15px 0px 0px
      h3
        color $active-blue
        font-family $font1
        font-size 15px
        margin-bottom 10px
      ul
        li
          a
            font-size 22px
            padding 10px 0px


  .grey
    background-color $color4
    padding 15px 15px 0px
    width calc(100% - 30px)
    z-index 0
    .container
      border-bottom 0px
      .logo
        h3
          position relative
          font-family $font2
          font-size 27px
          letter-spacing 1.1px
          width 90%
        .hr-ul-c
          text-align center
          ul.hr-inline
            margin-top 15px
            display inline-block
            li
              display inline-block
              width auto
              padding 0px
              .dcircle
                border 1px solid $color1
                border-radius 60%
                margin 1px 5px
                width 6px
                height 6px
            .selected
              .dcircle
                background-color $active-blue
                border-color $active-blue
