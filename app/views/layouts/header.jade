header
    .container
        .logo
            a(ng-click="showHomepage()")
                span.title Population.io
                span.subtitle {{ 'HEADER_TITLE' | translate }}
                span.icon-alpha
        .loader.fa.fa-refresh(ng-class="{'active': loading}")

        ul.link-list
            li
                a(ng-click="changeLanguage('EN')") EN
                a(ng-click="changeLanguage('ES')") ES
                a(ng-click="showAbout()") {{ 'HEADER_MENU_ABOUT' | translate }}
                a(ng-click="showMethodology()") {{ 'HEADER_MENU_METHODOLOGY' | translate }}
                a(ng-click="showDevelopers()") {{ 'HEADER_MENU_API' | translate }}
        .profile.animate( ng-show="currentPage > 0", ng-click="showHomepage()", ng-cloak ) {{profile.birthday.formatted | date:'dd MMM yyyy' }}, {{profile.country}}
        .world-population.animate(ng-show="currentPage > 0", ng-cloak)
            span(ng-show="clockType === 'personal'") {{rankGlobal | number:0}}
            span(ng-show="clockType === 'world'") {{worldPopulation | number:0}}
            .toggle
                label( ng-class="{'icon-gender icon-female': profile.gender === 'female', 'icon-male icon-gender': profile.gender === 'male'}", ng-model="clockType", btn-radio="'personal'" )
                label(class="icon-world", ng-model="clockType", btn-radio="'world'")
